<!-- Bombardier CRJ700 series -->
<!-- Mode control panel -->

<PropertyList>

	<path>autopilot.ac</path>

	<panel-marking-emit>
		<red>1</red>
		<green>0.871</green>
		<blue>0.427</blue>
	</panel-marking-emit>

	<!-- Visible only within 1/2 km -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>500</max-m>
	</animation>

	<animation>
		<type>select</type>
		<object-name>NeedsPower</object-name>
		<condition>
			<greater-than-equals>
				<property>systems/electrical/outputs/efis</property>
				<value>15</value>
			</greater-than-equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>NotImplemented</object-name>
		<condition>
			<property></property>
		</condition>
	</animation>
	<animation>
		<type>material</type>
		<object-name>Markings</object-name>
		<condition>
			<greater-than-equals>
				<property>systems/electrical/outputs/panel-lights</property>
				<value>15</value>
			</greater-than-equals>
		</condition>
		<emission>
			<red alias="../../../panel-marking-emit/red" />
			<green alias="../../../panel-marking-emit/green" />
			<blue alias="../../../panel-marking-emit/blue" />
			<factor-prop>controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>CRS1Knb</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<wrap type="bool">true</wrap>
				<step type="double">1</step>
				<min>1</min>
				<max>361</max>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<wrap type="bool">true</wrap>
				<step type="double">-1</step>
				<min>1</min>
				<max>361</max>
			</binding>
		</action>
	</animation>
